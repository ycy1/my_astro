{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    },
    
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    "strictNullChecks": true,
    "allowJs": true
  }
}